---
import { SEO } from "astro-seo";
const { title, seoTitle, seoDescription } = Astro.props;
import SpeedInsights from "@vercel/speed-insights/astro";
---

<head>
  <SEO title={seoTitle} description={seoDescription} />
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="manifest" href="/manifest.webmanifest" />
  <title>{title}</title>

  <!-- HTML Meta Tags -->
  <title>Veritas Managed Solutions, inc.</title>
  <meta
    name="description"
    content="Cabling and installation of low voltage systems, wireless, security, AV, electrical"
  />

  <!-- Facebook Meta Tags -->
  <meta property="og:url" content="https://veritas-inc.vercel.app/" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content="Veritas Managed Solutions, inc." />
  <meta
    property="og:description"
    content="Cabling and installation of low voltage systems, wireless, security, AV, electrical"
  />
  <meta
    property="og:image"
    content="https://opengraph.b-cdn.net/production/documents/afa04d3d-04df-428f-80c1-d2f7b1ae2e9f.jpg?token=ONaEV9hNftCV3XwLMH6BQlRbNLIBuHWWCz-NhgNf9ws&height=694&width=1200&expires=33243117662"
  />

  <!-- Twitter Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta property="twitter:domain" content="veritas-inc.vercel.app" />
  <meta property="twitter:url" content="https://veritas-inc.vercel.app/" />
  <meta name="twitter:title" content="Veritas Managed Solutions, inc." />
  <meta
    name="twitter:description"
    content="Cabling and installation of low voltage systems, wireless, security, AV, electrical"
  />
  <meta
    name="twitter:image"
    content="https://opengraph.b-cdn.net/production/documents/afa04d3d-04df-428f-80c1-d2f7b1ae2e9f.jpg?token=ONaEV9hNftCV3XwLMH6BQlRbNLIBuHWWCz-NhgNf9ws&height=694&width=1200&expires=33243117662"
  />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;800&family=Roboto+Mono:wght@200&display=swap"
    rel="stylesheet"
  />
</head>

<SpeedInsights />
