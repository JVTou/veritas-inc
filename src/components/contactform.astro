<div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
  <h2
    class="mb-4 text-4xl tracking-tight font-extrabold text-center text-white"
  >
    Contact Us
  </h2>
  <form name="Contact Form" class="space-y-8" method="post" data-netlify="true">
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text text-white">Your email:</span>
      </div>
      <input
        type="text"
        name="email"
        placeholder="name@veritas-inc.com"
        class="input input-bordered input-primary w-full max-w-xs"
      />
    </label>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text text-white">Choose your service type:</span>
      </div>
      <select name="Service Type" class="select select-primary w-full max-w-xs">
        <option disabled selected>Service Types</option>
        <option>Cable Infrastructure</option>
        <option>Wireless Services</option>
        <option>Audio and Visual</option>
        <option>Security Services</option>
        <option>Information Technology</option>
        <option>Managed Services</option>
        <option>Consultation</option>
        <option>Human Resources</option>
      </select>
    </label>
    <label class="form-control">
      <div class="label">
        <span class="label-text text-white">Project info:</span>
      </div>
      <textarea
        name="Message"
        class="textarea textarea-primary h-24"
        placeholder="Type your message"></textarea>
    </label>
    <button type="submit" class="btn btn-primary btn-wide text-white"
      >Send message</button
    >
  </form>
</div>
