---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import consultationcover from "../assets/install_pictures/consultation/consultation1.jpg";
import consultation1 from "../assets/install_pictures/consultation/alvaro-reyes-qWwpHwip31M-unsplash.jpg";
import consultation2 from "../assets/install_pictures/consultation/charlesdeluvio-Lks7vei-eAg-unsplash.jpg";
import consultation3 from "../assets/install_pictures/consultation/priscilla-du-preez-nNMBa7Y1Ymk-unsplash.jpg";
import consultation4 from "../assets/install_pictures/consultation/sean-pollock-PhYq704ffdA-unsplash.jpg";
import consultation5 from "../assets/install_pictures/consultation/benjamin-child-GWe0dlVD9e0-unsplash.jpg";
import consultation6 from "../assets/install_pictures/consultation/headway-5QgIuuBxKwM-unsplash.jpg";
---

<MainLayout>
  <div class="container my-8 lg:my-24 mx-auto md:px-6">
    <section class="lg:mb-32">
      <div class="container mx-auto text-center lg:text-left xl:px-32">
        <div
          class="flex flex-col-reverse gap-2 lg:grid items-center lg:grid-cols-2"
        >
          <div class="mb-12 lg:mb-0">
            <div
              class="relative z-[1] block rounded-lg px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] backdrop-blur-[30px] bg-base-200 shadow-black/20 md:px-12 lg:-mr-14"
            >
              <h2 class="mb-8 text-3xl font-bold">
                Consultation, design and project management
              </h2>
              <p class="mb-8 pb-2 text-neutral-300 lg:pb-0">
                <ul>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Consultation</strong
                    > - Find the results needed from a world of options
                  </li>
                  <li>
                    <strong class="font-semibold text-accent">Design</strong> - Create
                    a modern and cost-effective solution to your project
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Project Management</strong
                    > - Finish your projects within timelines using a structured
                    methodology
                  </li>
                </ul>
              </p>
            </div>
          </div>

          <div>
            <Image
              class="w-full rounded-lg shadow-lg shadow-black/20"
              src={consultationcover}
              widths={[240, 540, 720, consultationcover.width]}
              sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultationcover.width}px`}
              alt="Veritas consultation in action"
            />
          </div>
        </div>
      </div>
    </section>
  </div>
  <div class="container mx-auto px-5 py-2 lg:px-32">
    <div class="-m-1 flex flex-wrap md:-m-2">
      <div class="flex w-1/2 flex-wrap">
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={consultation1}
            widths={[240, 540, 720, consultation1.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultation1.width}px`}
            alt="Veritas consultation in action"
          />
        </div>
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={consultation2}
            widths={[240, 540, 720, consultation2.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultation2.width}px`}
            alt="Veritas consultation in action"
          />
        </div>
        <div class="w-full p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            widths={[240, 540, 720, consultation3.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultation3.width}px`}
            src={consultation3}
            alt="Veritas consultation in action"
          />
        </div>
      </div>
      <div class="flex w-1/2 flex-wrap">
        <div class="w-full p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={consultation4}
            widths={[240, 540, 720, consultation4.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultation4.width}px`}
            alt="Veritas consultation in action"
          />
        </div>
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={consultation5}
            widths={[240, 540, 720, consultation5.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultation5.width}px`}
            alt="Veritas consultation in action"
          />
        </div>
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={consultation6}
            widths={[240, 540, 720, consultation6.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${consultation6.width}px`}
            alt="Veritas consultation in action"
          />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
