---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import managedservicescover from "../assets/featured/managedservices.jpg";
import MScarousel from "../components/MScarousel.astro";
---

<MainLayout>
  <div class="container py-8 lg:py-24 mx-auto md:px-6">
    <section class="lg:mb-32">
      <div class="container mx-auto text-center lg:text-left xl:px-32">
        <div
          class="flex flex-col-reverse gap-2 lg:grid items-center lg:grid-cols-2"
        >
          <div class="mb-12 lg:mb-0">
            <div
              class="relative z-[1] block rounded-lg px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] backdrop-blur-[30px] bg-base-200 shadow-black/20 md:px-12 lg:-mr-14"
            >
              <div transition:name="MSdesc">
                <h2 class="mb-3 text-3xl font-bold">Managed Services</h2>
                <p>Network systems, server management and smart hands</p>
              </div>
              <p class="mb-8 pb-2 text-neutral-300 lg:pb-0">
                <ul>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Network Systems</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Desktop Support</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent">Servers</strong>
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Network Systems</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent">Software</strong>
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Smart Hands</strong
                    >
                  </li>
                </ul>
              </p>
            </div>
          </div>

          <div>
            <Image
              class="w-full rounded-lg shadow-lg shadow-black/20"
              src={managedservicescover}
              loading="eager"
              widths={[240, 540, 720, managedservicescover.width]}
              sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${managedservicescover.width}px`}
              transition:name="MScover"
              alt="Veritas managed services"
            />
          </div>
        </div>
      </div>
    </section>
  </div>
  <MScarousel />
</MainLayout>
