---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import wirelesscover from "../assets/featured/Wireless.jpeg";
import Wirelesscarousel from "../components/wirelesscarousel.astro";
---

<MainLayout>
  <div class="container py-5 lg:py-24 mx-auto md:px-6">
    <section class="lg:mb-32">
      <div class="container mx-auto text-center lg:text-left xl:px-32">
        <div
          class="flex flex-col-reverse px-3 gap-2 grid-flo lg:grid items-center lg:grid-cols-2"
        >
          <div class="lg:mb-0">
            <div
              class="relative z-[1] block rounded-lg px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] backdrop-blur-[30px] bg-base-200 shadow-black/20 md:px-12 lg:-mr-14"
            >
              <div transition:name="wirelessdesc">
                <h2 class="mb-3 text-3xl font-bold">Wireless Services</h2>
                <p>Wireless systems designed by experts</p>
              </div>
              <p class="lg:mb-8 pb-2 text-neutral-300 lg:pb-0">
                <ul>
                  <li>
                    <strong class="font-semibold text-accent"
                      >WiFi Systems</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >DAS Systems</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Predictive Surveys</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Indoor/Outdoor Surveys</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Point to Point</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Wireless Troubleshooting</strong
                    >
                  </li>
                </ul>
              </p>
            </div>
          </div>

          <div>
            <Image
              src={wirelesscover}
              class="w-full rounded-lg shadow-lg shadow-black/20"
              widths={[240, 540, 720, wirelesscover.width]}
              sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${wirelesscover.width}px`}
              transition:name="wirelesscover"
              alt="An access point installed by Veritas"
            />
          </div>
        </div>
      </div>
    </section>
  </div>
  <div class="mx-auto container mb-12 lg:mb-0">
    <div
      class="relative z-[1] block rounded-lg px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] backdrop-blur-[30px] bg-base-200 shadow-black/20 mx-5 md:px-12 lg:mx-32"
    >
      <h2 class="mb-8 text-2xl lg:text-3xl font-bold">
        Other wireless projects include:
      </h2>
      <p class="mb-8 pb-2 text-neutral-300 lg:pb-0">
        Veritas engineers Wi-Fi network designs that meet your businessâ€™ needs.
        Our comprehensive Wi-Fi services include:
      </p>
      <div
        class="mx-auto mb-8 flex flex-col md:justify-around lg:justify-between"
      >
        <p class="mx-auto mb-4 flex items-center md:mx-0 md:mb-2 lg:mb-0">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="mr-2 h-5 w-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
