<html lang="en">
  <head>
    <title>Apply Now | Veritas</title>
  </head>
  <body class="bg-base-100 text-base-content min-h-screen">
    <main class="max-w-xl mx-auto p-6">
      <h1 class="text-3xl font-bold mb-6 text-center">Apply for a Position</h1>

      <form
        name="job-application"
        method="POST"
        data-netlify="true"
        data-netlify-recaptcha="true"
        netlify-honeypot="bot-field"
        class="space-y-4 max-w-xl mx-auto"
        action="/thank-you"
      >
        <input type="hidden" name="form-name" value="job-application" />
        <p class="hidden">
          <label>
            First Name <input name="bot-field" type="text" />
          </label>
        </p>
        <div>
          <label class="block font-semibold mb-1" for="position">Position</label
          >
          <input
            type="text"
            id="position"
            name="position"
            class="input input-bordered w-full"
            required
          />
        </div>

        <div>
          <label class="label">
            <span class="label-text">Full Name</span>
          </label>
          <input
            type="text"
            name="name"
            required
            class="input input-bordered w-full"
          />
        </div>

        <div>
          <label class="label">
            <span class="label-text">Email</span>
          </label>
          <input
            type="email"
            name="email"
            required
            class="input input-bordered w-full"
          />
        </div>

        <div>
          <label class="label">
            <span class="label-text">Phone Number</span>
          </label>
          <input
            type="tel"
            name="phone"
            required
            class="input input-bordered w-full"
          />
        </div>

        <div>
          <label class="label">
            <span class="label-text">Resume</span>
          </label>
          <input
            type="file"
            name="resume"
            class="file-input file-input-bordered w-full"
          />
        </div>

        <div>
          <label class="label">
            <span class="label-text">Cover Letter / Notes</span>
          </label>
          <textarea
            name="message"
            class="textarea textarea-bordered w-full"
            rows="4"></textarea>
        </div>
        <div data-netlify-recaptcha="true"></div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary"
            >Submit Application</button
          >
        </div>
      </form>
    </main>
  </body>
</html>
