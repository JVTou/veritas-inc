---
import MainLayout from "../layouts/MainLayout.astro";
import ContactInfo from "./contactinfo.astro";
import ContactForm from "./contactform.astro";
import Locations from "../components/map.astro";
---

<div class="snap-y overflow-y-scroll overflow-x-hidden h-screen transition-all">
  <MainLayout
    title="Veritas | Contact"
    seoTitle="Veritas | Contact"
    seoDescription="Address, email, phone number and request form for prospective customers"
  >
    <section class="scroll-mt-16 min-h-[90vh]" id="contactinfo">
      <ContactInfo />
    </section>
    <section
      class="snap-always snap-start target:before:block target:before:h-16 h-screen w-screen overflow-hidden mx-auto bg-base-100"
      id="locations"
    >
      <Locations />
    </section>
    <section class="scroll-mt-16" id="contactform">
      <ContactForm />
    </section>
  </MainLayout>
</div>
<script src="../scripts/aboutscript.ts"></script>
