---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Contact"
  seoTitle="Veritas Managed Solutions, inc. contact information"
  seoDescription="Address, email, phone number and request form for Veritas"
>
  <div id="typed-strings">
    <p>Our Mission</p>
  </div>

  <div class="w-6/12 mx-auto text-center text-5xl py-10">
    <span id="typed"></span>
  </div>
  <section class="text-gray-600 body-font relative w-full">
    <div class="absolute inset-0 bg-gray-300">
      <iframe
        class="h-full w-full border-0 grayscale"
        loading="lazy"
        allowfullscreen
        title="map"
        src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJO2XQGpvNj4ARgjZUfpbCWv4&key=AIzaSyBCEfQ6JZJgM4W01L9XGXzErfLigAD0vqQ"
      ></iframe>
    </div>
    <div class="container px-5 py-24 mx-auto flex">
      <div
        class="lg:w-1/3 md:w-1/2 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md"
      >
        <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">
          Contact Us
        </h2>
        <p class="leading-relaxed mb-5 text-gray-600">
          Weâ€™ll qualify your opportunity and walk you through every step of the
          process
        </p>
        <div class="relative mb-4">
          <label for="email" class="leading-7 text-sm text-gray-600"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          />
        </div>
        <div class="relative mb-4">
          <label for="message" class="leading-7 text-sm text-gray-600"
            >Message</label
          >
          <textarea
            id="message"
            name="message"
            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"
          ></textarea>
        </div>
        <button
          class="inline-flex justify-center transition-all items-center py-3 px-5 text-base font-medium text-center dark:text-slate-700 text-slate-700 hover:text-slate-200 rounded-lg bg-gray-400 hover:bg-slate-800 focus:ring-4 focus:ring-slate-300 dark:focus:ring-slate-900"
        >
          Send
          <svg
            class="ml-2 -mr-1 w-5 h-5"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path></svg
          >
        </button>
        <p class="text-xs text-gray-500 mt-3">
          We'll get back to you within 24 hours
        </p>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  import Typed from "typed.js";
  var typed = new Typed("#typed", {
    stringsElement: "#typed-strings",
    typeSpeed: 75,
    showCursor: false,
  });
</script>
