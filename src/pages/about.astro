---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Veritas | Contact"
  seoTitle="Veritas | Contact"
  seoDescription="Address, email, phone number and request form for Veritas"
>
  <section class="text-primary-content body-font relative">
    <div class="hidden lg:block absolute inset-0 bg-neutral">
      <iframe
        class="h-full w-full border-0 grayscale"
        loading="lazy"
        allowfullscreen
        title="map"
        src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJO2XQGpvNj4ARgjZUfpbCWv4&key=AIzaSyBCEfQ6JZJgM4W01L9XGXzErfLigAD0vqQ"
      ></iframe>
    </div>
    <div class="container px-5 py-24 mx-auto !flex">
      <div
        class="lg:w-1/3 rounded-lg p-8 flex flex-col lg:ml-auto w-full bg-base-200 mt-10 lg:mt-0 relative z-10 shadow-md !h-fit"
      >
        <script
          type="text/javascript"
          src="https://opnform.com/widgets/iframeResize.min.js"></script>
        <iframe
          style="border:none;width:100%"
          id="form-contact-us-yvm0ss"
          src="https://opnform.com/forms/contact-us-yvm0ss"></iframe>
        <script type="text/javascript">
          document.addEventListener("astro:page-load", () => {
            iFrameResize();
          });
          iFrameResize(
            { log: false, checkOrigin: false },
            "#form-contact-us-yvm0ss"
          );
        </script>
      </div>
    </div>
  </section>
</MainLayout>
