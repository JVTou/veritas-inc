---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Veritas | Projects"
  seoTitle="Veritas | Projects"
  seoDescription="Low voltage projects completed by Veritas for nationwide projects"
>
  <section class="w-8/12 lg:w-6/12 mx-auto">
    <div>
      <p class="text-4xl text-center my-5">Veritas Projects</p>
    </div>
  </section>
  <section>
    <div class="my-6 text-center">
      <div class="stats stats-vertical lg:stats-horizontal shadow">
        <div class="stat">
          <div class="stat-title">Technicians</div>
          <div class="stat-value" id="technicianstat"></div>
          <div class="stat-desc">↗︎ 42 YoY (+34%)</div>
        </div>

        <div class="stat">
          <div class="stat-title">Completed Projects</div>
          <div class="stat-value" id="projectstat"></div>
          <div class="stat-desc">↗︎ 2360 YoY (+22%)</div>
        </div>

        <div class="stat">
          <div class="stat-title">Partners</div>
          <div class="stat-value" id="partnerstat"></div>
          <div class="stat-desc">↗︎ 6 (+14%)</div>
        </div>
      </div>
    </div>
  </section>
  <section
    class="mt-8 p-6 grid grid-flow-row lg:grid-cols-3 gap-5 shadow-accent justify-around justify-items-center"
  >
    <a href="projects/av">
      <div
        class="card lg:card-side image-full bg-base-100 shadow-xl transition-all hover:scale-105 w-full min-h-full max-h-96"
      >
        <figure>
          <img
            src="/assets/featured/AudioVisual.jpeg"
            alt="Conference Room"
            class="object-cover object-center"
          />
        </figure>
        <div class="card-body">
          <h2 class="card-title">A/V projects</h2>
          <p>Modern conference rooms prepared to improve your workflow</p>
        </div>
      </div>
    </a>
    <a href="projects/wireless">
      <div
        class="card lg:card-side image-full bg-base-100 shadow-xl transition-all hover:scale-105 w-full min-h-full max-h-96"
      >
        <figure>
          <img
            src="/assets/featured/Wireless.jpeg"
            alt="Wireless Access Point"
          />
        </figure>
        <div class="card-body">
          <h2 class="card-title">Wireless</h2>
          <p>Find out more about wireless projects completed nationwide</p>
        </div>
      </div>
    </a>
    <a href="projects/cctv">
      <div
        class="card lg:card-side image-full bg-base-100 shadow-xl transition-all hover:scale-105 w-full min-h-full max-h-96"
      >
        <figure>
          <img src="/assets/featured/CCTV.png" alt="Security Camera" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">CCTV systems</h2>
          <p>Explore video systems installed and managed for your business</p>
        </div>
      </div>
    </a>
    <a href="projects/data">
      <div
        class="card lg:card-side image-full bg-base-100 shadow-xl transition-all hover:scale-105 w-full min-h-full max-h-96"
      >
        <figure>
          <img src="/assets/featured/Fiber.jpeg" alt="Fiber Optic Cable" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">Data cabling</h2>
          <p>Explore the options to build or renovate your network</p>
        </div>
      </div>
    </a>
    <a href="projects/security">
      <div
        class="card lg:card-side image-full bg-base-100 shadow-xl transition-all hover:scale-105 w-full min-h-full max-h-96"
      >
        <figure>
          <img src="/assets/featured/Security.png" alt="Security panel" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">Security</h2>
          <p>
            Secure your locations with card access, burglar and alarm systems
          </p>
        </div>
      </div>
    </a>
  </section>
</MainLayout>

<script>
  document.addEventListener("astro:page-load", () => {
    Numbers();
  });
  import { CountUp } from "countup.js";
  function Numbers() {
    const options = {
      suffix: "+",
      enableScrollSpy: true,
      scrollSpyOnce: true,
      scrollSpyDelay: 750,
    };
    let techs = new CountUp("technicianstat", 163, options);
    let projects = new CountUp("projectstat", 13343, options);
    let partners = new CountUp("partnerstat", 53, options);
  }
</script>
